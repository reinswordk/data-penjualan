<!-- Header -->
<div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url(<%- __siteurl %>/img/theme/profile-diansastro2.jpg); background-size: cover; background-position: center top;">
  <!-- Mask -->
  <span class="mask bg-gradient-default opacity-8"></span>
  <!-- Header container -->
  <div class="container-fluid d-flex align-items-center">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="display-2 text-white"><%= locals.appInfo && locals.appInfo.appName || 'Add New application' %></h1>
        <p class="text-white mt-0 mb-5"><%= (locals.appInfo && locals.appInfo.appName)?('Make sure to add webhook in gitlab/bitbucket repository setting'):('Fill all required form and Make sure to add webhook in gitlab/bitbucket repository setting') %></p>
      </div>
    </div>
  </div>
</div>