<div class="header bg-gradient-info pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body">
      <!-- Card stats -->
      <div class="row">
				<div class="col-xl-12 col-lg-12">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Last Synced App</h5>
                  <span class="h2 font-weight-bold mb-0"><%= lastSynced.appName || '' %></span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                    <i class="fab fa-<%= lastSynced.appLastSyncService || '' %>"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <span class="text-success mr-2"><i class="far fa-calendar-alt"></i> <%= lastSynced.appLastSync || '' %> </span>
                <span class="text-nowrap text-danger"> <i class="fab fa-<%= lastSynced.appLastSyncService || '' %>"></i> <%= lastSynced.appLastSyncService || '' %> </span>
                <span class="text-primary text-nowrap"> <i class="fas fa-at"></i> <%= lastSynced.appLastSyncIP || '' %></span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>